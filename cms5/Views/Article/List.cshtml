@model Models.Article

@{
    ViewBag.Title = ViewBag.kWord;
    Layout = "~/Views/Shared/_LayoutZg.cshtml";
}
<style>
    .list li {
        border-bottom: dashed 1px #d6d3d3;
    }
</style>
<div class="container mt10">
    <div class="row">
        <!--start left -->
        <div class="col-xs-12  col-lg-9 pr0">
            <div class="box">
                <div class="page-header" style="padding-top: 10px">
                    <i class="glyphicon glyphicon-home"></i>
                    <a href="/">首页</a><em> > </em>@ViewBag.pNav<em> > </em><a href="/article/list/?kWord=@ViewBag.kWord">@ViewBag.Title</a>
                </div>
                <div class="zg_detail ">
                    <div class="rows list">
                        <ul>
                            @foreach (var list in ViewBag.List)
                            {
                                // aId, aName, aContent, acId, aAuthor, aPV, aAddtime, isTuiJian, isReMen, isZhiDing

                                <li>
                                    <i class="fa fa-neuter" aria-hidden="true"></i>
                                    <a href="/Article/GetDetail?id=@list.aId" title="@list.aName">
                                        @list.aName
                                    </a>
                                    @{
                                        DateTime start = Convert.ToDateTime(list.aAddtime);
                                        DateTime end = DateTime.Now;
                                        TimeSpan sp = end.Subtract(start);
                                        if (sp.Days < 2)
                                        {
                                            <span>&nbsp; &nbsp;</span><span class="badge" style="background-color: #d75452;">new</span>
                                        }
                                    }
                                </li>

                            }

                        </ul>
                    </div>
                </div>

                <nav aria-label="Page navigation" class="text-center">
                    <ul class="pagination">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">上一页</span>
                            </a>
                        </li>
                        <li><a href="#">1</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">下一页</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>


        </div>
        <!--end left -->
        <!--start right -->
        <div class="col-xs-12  col-lg-3 mt10">
            <div class="list-group text-center">
                <a href="#" class="list-group-item active">
                    @ViewBag.pNav
                </a>
                @foreach (var navlist in ViewBag.navList)
                {

                    <a href="/Article/List/?kWord=@navlist.acName" class="list-group-item">@navlist.acName</a>
                }
               
            </div>
        </div>
        <!--end right -->
    </div>

</div>