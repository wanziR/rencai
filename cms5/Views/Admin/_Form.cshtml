
@{
    ViewBag.Title = "表单";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- 编辑框-->
<script type="text/javascript" charset="utf-8" src="/Scripts/ueditor/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="/Scripts/ueditor/ueditor.all.min.js"> </script>
<script type="text/javascript" charset="utf-8" src="/Scripts/ueditor/lang/zh-cn/zh-cn.js"></script>

<script type="text/javascript">
    var ue = UE.getEditor('editor', {
        initialContent: "请在这里输入正文......",
        autoClearinitialContent: true, //focus时自动清空初始化时的内容
        //initialFrameWeight:100%,
        initialFrameHeight: 350,
        textarea: 'editorContent',      //设置提交时编辑器内容的名字

        autoFloatEnabled: false,
        focus: false,
        autoHeightEnabled: true,
        sourceEditor: true,
        wordCount: false,               //关闭字数统计
        elementPathEnabled: false,      //关闭elementPath
        maximumWords: 10240
    });
</script>
<div class="content">

    <!-- Start Page Header -->
    <div class="page-header">
        <h1 class="title">@ViewBag.Title</h1>
        <ol class="breadcrumb">
            <li class="active">栏目简介</li>
        </ol>

        <!-- Start Page Header Right Div -->
        <div class="right">
            <div class="btn-group" role="group" aria-label="...">
                <a href="#" class="btn btn-light">栏目</a>
                <a href="#" class="btn btn-light"><i class="fa fa-refresh"></i></a>
                <a href="#" class="btn btn-light"><i class="fa fa-search"></i></a>
                <a href="#" class="btn btn-light" id="topstats"><i class="fa fa-line-chart"></i></a>
            </div>
        </div>
        <!-- End Page Header Right Div -->

    </div>
    <!-- End Page Header -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <!-- START 容器-->
    <div class="container-padding">

        <!-- Start Row -->
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form class="form-horizontal">

                            <div class="form-group">
                                <label class="col-sm-2 control-label form-label">用户注册</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">请填写您的真实信息</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputAmount2" class="col-sm-2 control-label form-label">用户名</label>
                                <div class="col-sm-10">
                                    <label class="sr-only" for="exampleInputAmount2">登录</label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                        <input type="text" class="form-control" id="exampleInputAmount2" placeholder="请输入呢称">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input002" class="col-sm-2 control-label form-label">真实姓名</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="input002">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="input002" class="col-sm-2 control-label form-label">手机号</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="input001">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="input3" class="col-sm-2 control-label form-label">密码</label>
                                <div class="col-sm-10">
                                    <input type="password" class="form-control" id="input3" placeholder="请输入密码">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="input4" class="col-sm-2 control-label form-label">年龄</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="input4" placeholder="信息不可输入" disabled>
                                </div>
                            </div>
                            <div class="form-group has-error">
                                <label for="input8" class="col-sm-2 control-label form-label">输入有误</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="input8">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="input002" class="col-sm-2 control-label form-label">手机号</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="input005">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="input002" class="col-sm-2 control-label form-label">日期</label>
                                <div class="col-sm-10">
                                    <div class="controls">
                                        <div class="input-prepend input-group">
                                            <span class="add-on input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input style="width:100px" type="text" id="date-picker" class="form-control" value="01/1/2019" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="input002" class="col-sm-2 control-label form-label">城市</label>
                                <div class="col-sm-10">
                                    <select class="selectpicker">
                                        <option>北京</option>
                                        <option>上海</option>
                                        <option>深圳</option>
                                        <option>兰州</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="input002" class="col-sm-2 control-label form-label">性别</label>
                                <div class="col-sm-10">
                                    <div class="radio radio-info radio-inline">
                                        <input type="radio" id="inlineRadio1" value="option1" name="radioInline">
                                        <label for="inlineRadio1"> 女</label>
                                    </div>
                                    <div class="radio radio-inline">
                                        <input type="radio" id="inlineRadio2" value="option1" name="radioInline" checked>
                                        <label for="inlineRadio2"> 男</label>
                                    </div>
                                </div>
                            </div>


                            <label for="input002" class="col-sm-2 control-label form-label">文章内容</label>
                            <div class="col-sm-10">
                                <textarea id="editor" name="editor"   style="width:100%;"></textarea>
                                <button class="btn btn-default">提交</button>
                            </div>


                        </form>
                    </div>


                </div>
            </div>
        </div>
        <!-- End Row -->

    </div>
    <!-- END 容器 -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <!-- Start Footer -->
    <div class="row footer">

    </div>
    <!-- End Footer -->


</div>



