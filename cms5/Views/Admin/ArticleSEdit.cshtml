@model Models.Article

@{
    ViewBag.Title = "【编辑】"+ Model.asName;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<script src="~/Scripts/ueditor/ueditor.config.js"></script>
<script src="~/Scripts/ueditor/ueditor.all.min.js"></script>
<script src="~/Scripts/ueditor/lang/zh-cn/zh-cn.js"></script>
<link href="~/Scripts/ueditor/themes/iframe.css" rel="stylesheet" />
<script type="text/javascript">
    var editor = new baidu.editor.ui.Editor({
        UEDITOR_HOME_URL: '/Scripts/ueditor/',//配置编辑器路径
        initialContent: '',//初始化编辑器内容
        autoHeightEnabled: true//高度自动增长

    });
    editor.render('editor');
</script>
<div class="content">

    <!-- Start Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col-lg-3 col-sm-12 text-left">  <h1 class="title">@ViewBag.Title</h1></div>
            <div class="col-lg-6 col-sm-8 text-left">
               
            </div>

            <div class="col-lg-3 col-sm-4 text-right">
                <div class="btn-group" role="group" aria-label="..." style="margin-right: 10px">
                   
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Header -->

    <div class="container-widget">

        <!-- Start Row -->
        <div class="row">

            <!-- Start Panel -->
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="my_fabu">
                        <form class="form-horizontal" action="/Admin/GetSEdit" method="post">
                            <span class="label label-success">@ViewBag.info</span>
                            @*aName, aContent, acId, aAuthor, aPV, aAddtime*@
                            <input type="text" name="asId" class="form-control hidden" value="@Model.asId">
                            <input type="text" name="asImg" class="form-control hidden" value="@Model.asImg">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">栏目标题</label>
                                <div class="col-sm-10">
                                    <input type="text" name="asName" class="form-control" value="@Model.asName" placeholder="请输入标题">
                                </div>
                            </div>


                            <div class="form-group">
                                <label for="inputaAuthor" class="col-sm-2 control-label">页面详情</label>
                                <div class="col-sm-10">
                                    <textarea style="width: 100%; border: 0;" id="editor" name="asContent" placeholder="请输入文章内容">@Model.asContent</textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button id="btn-submit" type="submit" class="btn btn-default">提交</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- End Panel -->
        

        </div>
        <!-- End Row -->

    </div>
    <!-- END 内容部分  -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->



</div>