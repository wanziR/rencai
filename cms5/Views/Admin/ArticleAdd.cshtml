
@{
    ViewBag.Title = "添加文章";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/Scripts/ueditor/ueditor.config.js"></script>
<script src="~/Scripts/ueditor/ueditor.all.min.js"></script>
<script src="~/Scripts/ueditor/lang/zh-cn/zh-cn.js"></script>
<link href="~/Scripts/ueditor/themes/iframe.css" rel="stylesheet" />
<script type="text/javascript">
    var editor = new baidu.editor.ui.Editor({
        UEDITOR_HOME_URL: '/Scripts/ueditor/',//配置编辑器路径
        initialContent: '',//初始化编辑器内容
        autoHeightEnabled: true//高度自动增长
      
    });
    editor.render('editor');
</script>
<div class="content">

    <!-- Start Page Header -->
    <div class="page-header">
        <div class="row">
            <div class="col-lg-3 col-sm-12 text-left">  <h1 class="title">@ViewBag.Title</h1></div>
            <div class="col-lg-6 col-sm-8 text-left">
              
            </div>
           
            <div class="col-lg-3 col-sm-4 text-right">
                <div class="btn-group" role="group" aria-label="..." style="margin-right: 10px">
                    <a href="/Admin/ArticleList?kWord=@ViewBag.kWord" class="btn btn-primary">列表</a>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Header -->

    <div class="container-widget">

        <!-- Start Row -->
        <div class="row">

            <!-- Start Panel -->
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="my_fabu">
                        <form class="form-horizontal" action="/Admin/GetAdd/?kWord=@ViewBag.kWord" method="post">
                            @*aName, aContent, acId, aAuthor, aPV, aAddtime*@
                            <div class="form-group">
                                <label for="inputaName" class="col-sm-2 control-label">栏目</label>
                                <div class="col-sm-10">
                                    @*<input type="text" name="acId" class="form-control hidden" value="2">*@
                                    <select class="selectpicker form-control" name="acId" style="margin-left:0">
                                        <option value="@ViewBag.acId">===== @ViewBag.kWord ==== </option>

                                        @if (ViewBag.List != null)
                                        {
                                            foreach (var ACList in ViewBag.List)
                                            {
                                                <option value="@ACList.acId ">@ACList.acName</option>

                                            }
                                        }
                                    </select>
                                    @*<script>
                                        $(function() {
                                            $(".selectpicker").change(function() {
                                                var $kWord = $(".selectpicker").val();
                                                //$.post("/article/aArticleList/", { kWord: $kWord });
                                                window.location.href = "/Admin/ArticleAdd/?kWord=" + $kWord;

                                            });
                                        })
                                    </script>*@
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputaName" class="col-sm-2 control-label">标题</label>
                                <div class="col-sm-10">
                                    <input type="text" name="aName" class="form-control" id="inputaName" placeholder="请输入标题">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputaAuthor" class="col-sm-2 control-label">作者</label>
                                <div class="col-sm-10">
                                    <input type="text" name="aAuthor" class="form-control" id="inputaAuthor" placeholder="请输入作者">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputaAuthor" class="col-sm-2 control-label">内容</label>
                                <div class="col-sm-10">
                                    <textarea id="editor"  name="aContent" placeholder="请输入文章内容" style="width: 100%;"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-default">提交</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- End Panel -->


        </div>
        <!-- End Row -->

    </div>
    <!-- END 内容部分  -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->



</div>