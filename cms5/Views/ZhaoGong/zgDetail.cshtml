@model Models.ZhaoGong
@{
    ViewBag.Title = "招工详情";
    Layout = "~/Views/Shared/_LayoutZg.cshtml";
}
<div class="container mt10">
    <div class="row">
        <!--start left -->
        <div class="col-xs-12  col-lg-9 pr0">
            <div class="box">
                <div class="page-header" style="padding-top: 10px">
                    <i class="glyphicon glyphicon-home"></i>
                    <a href="#">首页</a><em> / </em><a href="#">@ViewBag.Title</a>
                </div>
                <div class="zg_detail ">
                    <div class="rows">
                        <ul class="nav nav-list">
                            <li style="color: #145fa8;font-size: 16px"><b>【@Model.zgArea-@Model.zgZhuti】 </b></li>
                            <li>
                                <i class="fa fa-hourglass" aria-hidden="true" style="color: #145fa8"></i>
                                发布时间：2019-09-12 08:55
                            </li>
                            <li><i class="fa fa-id-card" aria-hidden="true" style="color: #145fa8"></i> 联系人：@Model.zgUser</li>
                            <li>
                                <i class="fa fa-users" aria-hidden="true" style="color: #145fa8"></i> @Model.zgXuqiu：
                                【@Model.zgGz-@Model.zgNum 人】
                            </li>
                            <li>
                                <div style="width: 100%">

                                    <div class="row">
                                        <div class="col-xs-12 col-lg-8">
                                            <div class="btn-group float-left" role="group"
                                                 aria-label="Button group">
                                                <button type="button" class="btn btn-primary">电话号码：</button>
                                                <button type="button" class="btn btn-default">
                                                    @{
                        string m = Model.zgPhone;
                        m = m.Replace(m.Substring(m.Length - 4, 4), "****");
                                                    }
                                                    <span id="zgP1">  @m</span>
                                                    <span id="zgP2" hidden>@Model.zgPhone</span>
                                                </button>

                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-lg-4 text-right">
                                            @{if (this.User.Identity.IsAuthenticated)
                {
                                <button id="zgP" data-toggle="modal" data-target="#phone" class="btn btn-danger right">查看完整电话号码</button>
}
else
{
                                <button data-toggle="modal" data-target="#nologin" class="btn btn-danger right">查看完整电话号码</button>
}
                                            }

                                        </div>
                                        <!--start Modal 未登录提示-->
                                        <div class="modal fade" id="notLogined" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                            <div class="modal-dialog modal-sm" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                        <h4 class="modal-title text-center" id="myModalLabel" style="color:#337ab7;font-weight:bold"> 查看电话号码</h4>
                                                    </div>
                                                    <div class="modal-body" style="color:#c9302c">
                                                        <i class="glyphicon glyphicon-info-sign"></i> 你还没有登录，请先登录！
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-primary" data-dismiss="modal">关闭 </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--end Modal 未登录提示-->
                                    </div>
                                    <script>
                                        $('#zgP').click(function () {
                                            $('#zgP1').hide();
                                            $('#zgP2').show();
                                        });
                                    </script>


                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="box mt15 pl15">
                <i class="fa fa-newspaper-o " aria-hidden="true" style="color: #145fa8"></i> 招工详情:
                <hr>
                <div class="content">
                    @Model.zgDetail
                </div>
            </div>
        </div>
        <!--end left -->
        <!--start right -->
        @Html.Partial("/Views/Shared/_ZgRight.cshtml")
        <!--end right -->
    </div>

</div>