@model Models.Article
@{
    ViewBag.Title = @Model.asName;
    Layout = "~/Views/Shared/_LayoutZg.cshtml";
}
<!--banner-->
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active" style="background-color:#0f1037">
            <img src="@Model.asImg" alt="..." style="margin:0 auto;">
            <div class="carousel-caption">
            </div>
        </div>
    </div>


</div>
<div class="container mt10">
    <div class="row">
        <div class="box">
            <div class="Content" style="line-height: 30px; padding: 10px 5px;min-height: 400px" >
                @Html.Raw(Model.asContent)
            </div>
        </div>
    </div>
</div>

