@model Models.UserInfo

@{
    ViewBag.Title = "用户注册";
    Layout = "~/Views/Shared/_Null.cshtml";
}
<!----start   模态框 登录注册---->
<!-- 注册窗口 -->
<div id="register" class="" tabindex="-1" role="dialog" style="margin:0 auto">
    <div class="modal-dialog" role="document">
        <form class="form-group" action="/UserInfo/GetAdd" style="margin-top: 40px">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h2 class="text-center" style="font-size:18px;font-weight:bold">注册</h2>

                    <div class="form-group">
                        <label for="">用户名</label>&nbsp;<span style="color:red">@Html.ValidationMessage("userName")</span>
                        <input name="userName" class="form-control" type="text" placeholder="至少2个汉字或4个英文字母">
                    </div>
                    <div class="form-group">
                        <label for="">手机号</label>&nbsp;<span style="color:red">@Html.ValidationMessage("userphone")</span>
                        <input name="userphone" class="form-control" type="text" placeholder="11位数字手机号">
                    </div>
                    <div class="form-group">
                        <label for="">密码</label>&nbsp;<span style="color:red">@Html.ValidationMessage("userPwd")</span>
                        <input name="userPwd" class="form-control" type="password" placeholder="至少6位字母或数字">
                    </div>
                    <div class="form-group">
                        <label for="">再次输入密码</label>
                        <input class="form-control" type="password" placeholder="至少6位字母或数字">
                    </div>

                    <a href="" data-toggle="modal" data-dismiss="modal" data-target="#login">已有账号？点我登录</a>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="submit">提交</button>
                    <button class="btn btn-danger" data-dismiss="modal">取消</button>
                </div>
            </div>
        </form><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--登录窗口 -->
<div id="login" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="form-group" action="/UserInfo/Login" method="post" style="margin-top: 40px">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h2 class="text-center" style="font-size:18px;font-weight:bold">登录</h2>

                    <div class="form-group">
                        <label for="">用户名</label>@Html.ValidationMessage("userName")
                        <input name="userName" class="form-control" type="text" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="">密码</label>
                        <input name="userPwd" class="form-control" type="password" placeholder="">
                    </div>
                    <a href="" data-toggle="modal" data-dismiss="modal" data-target="#register">还没有账号？点我注册</a>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="submit">登录</button>
                    <button class="btn btn-danger" data-dismiss="modal">取消</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--登录窗口 -->
<!----end   模态框 登录注册---->
