@model Models.ZhaoHuo

@{
    ViewBag.Title = "找队伍找人";
    Layout = "~/Views/Shared/_LayoutZg.cshtml";
}
<div class="container">
    <div class="box visible-xs mt10 pl15">
        <i class="glyphicon glyphicon-home"></i>
        <a href="#">首页</a><em> / </em><a href="#">@ViewBag.Title</a>
    </div>
    <div class="box hidden-xs">
        <div class="page-header" style="padding-top: 10px">
            <i class="glyphicon glyphicon-home"></i>
            <a href="#">首页</a><em> / </em><a href="#">@ViewBag.Title</a>
        </div>
        <div class="commonOption ">
            <div class="rows">
                <div class="rit">
                    <div class="ins">
                        <a class="cur" href="/zhaogong/">工种</a>
                        <a href="#"><b>【管理岗】</b></a>
                        @if (ViewBag.List1 != null)
                        {

                            foreach (var lista in ViewBag.list1)
                            {
                                <a href="/zhaohuo/zhinfo/?strWord=@lista.gzName">@lista.gzName</a>

                            }
                        }
                        <a href="#"><b>【技术工人】</b></a>
                        @if (ViewBag.List2 != null)
                        {

                            foreach (var listb in ViewBag.list2)
                            {
                                <a href="/zhaohuo/zhinfo/?strWord=@listb.gzName">@listb.gzName</a>

                            }
                        }
                        <a href="#"><b>【特种作业人员】</b></a>
                        @if (ViewBag.List3 != null)
                        {

                            foreach (var listc in ViewBag.list3)
                            {
                                <a href="/zhaohuo/zhinfo/?strWord=@listc.gzName">@listc.gzName</a>

                            }
                        }
                        <a href="#"><b>【司机驾驶员】</b></a>
                        @if (ViewBag.List4 != null)
                        {

                            foreach (var listd in ViewBag.list4)
                            {
                                <a href="/zhaohuo/zhinfo/?strWord=@listd.gzName">@listd.gzName</a>

                            }
                        }
                    </div>
                </div>
            </div>

            <div class="rows">
                <div class="rit">
                    <div class="ins">
                        <a class="cur" href="#">区域</a>

                        @if (ViewBag.ListCity != null)
                        {

                            foreach (var listct in ViewBag.listCity)
                            {
                                <a href="/zhaoHuo/zhinfo/?strWord=@listct.zhArea">@listct.zhArea</a>

                            }
                        }
                        

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="container mt10">
    <div class="row">


        <div class="col-xs-12  col-lg-9 pr0">
            <div class="box pl15">
                @if (ViewBag.List != null)
                {

                    foreach (var alist in ViewBag.list)
                    {
                        <div class="row">
                            <div class="col-xs-12 col-lg-8 text-left" style="overflow:initial">
                                <h4 style="color:#145fa8">@alist.zhTitle</h4>
                                <p>联系人：@alist.zhUser</p>
                                <p>工作地区：@alist.zhArea</p>
                                <p style="color: darkgray">发布时间：@alist.zhAddtime.ToString("yyyy-MM-dd HH:mm") </p>
                            </div>
                            <div class="col-xs-12 col-lg-4 text-right">
                                <div class="btn-group" role="group" aria-label="...">
                                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom"
                                            title="该用户已经通过实名认证">
                                        <i class="glyphicon  glyphicon-check"></i>实名
                                    </button>
                                    @*<button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom"
                                                title="VIP认证用户">
                                            <i class="glyphicon  glyphicon-check"></i>VIP
                                        </button>*@
                                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom"
                                            title="该信息已审核">
                                        <i class="glyphicon  glyphicon-check"></i>已核
                                    </button>
                                    <a href="/ZhaoHuo/GetDetail?id=@alist.zhId" class="btn btn-default">查看详情</a>
                                </div>
                                <br><br>
                                <a data-toggle="tooltip" data-placement="bottom" title="平台信用">
                                    @{
                                        int a = 3;

                                        if (a == 1)
                                        {
                                            @Html.Raw(ViewBag.xin1);
                                        }
                                        else if (a == 2)
                                        {
                                            @Html.Raw(ViewBag.xin2);
                                        }
                                        else if (a == 3)
                                        {
                                            @Html.Raw(ViewBag.xin3);
                                        }
                                        else if (a == 4)
                                        {
                                            @Html.Raw(ViewBag.xin4);
                                        }
                                        else
                                        {
                                            @Html.Raw(ViewBag.xin5);
                                        }
                                    }
                                </a>
                            </div>
                        </div>
                        <hr class="simple" color="#6f5499" />
                    }


                }


            </div>
            <script>
	$(function () {
		$("[data-toggle='tooltip']").tooltip();
	});
            </script>
            <div class="box mt10 text-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">上一页</span>
                            </a>
                        </li>
                        <li><a href="#">1</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">下一页</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        @Html.Partial("/Views/Shared/_ZgRight.cshtml")
    </div>

</div>